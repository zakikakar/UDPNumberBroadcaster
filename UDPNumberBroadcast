from sense_hat import SenseHat
from time import sleep

sense = SenseHat()

sense.clear()

red = (255,0,0)
green = (0,255,0)
blue = (0,0,255)
yellow = (255,255,0)
nothing = (0,0,0)
number = 1

while True:
  sense.show_message(str(number), scroll_speed=0.1, text_colour=yellow, back_colour=blue)
  number+=1
  sleep(0.5)
  